    <!-- Site Title -->
    <title>housing</title>
    <!-- Site favicon -->
    <link href="https://www.una.edu/brand/images/logo/round/UNA-roundLionPurpleW.png.pagespeed.ce.sooHu-qo8w.png" rel="shortcut icon"/>
    <!--Material Icon -->
    <link crossorigin="anonymous" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.3.67/css/materialdesignicons.min.css" integrity="sha512-nRzny9w0V2Y1/APe+iEhKAwGAc+K8QYCw4vJek3zXhdn92HtKt226zHs9id8eUq+uYJKaH2gPyuLcaG/dE5c7A==" referrerpolicy="no-referrer" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&amp;family=Tajawal:wght@200;300;400;500;700;800;900&amp;display=swap" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <link href="https://arabyai-webpages.s3.me-south-1.amazonaws.com/template_website/araby_ai_template/css/animate.css" rel="stylesheet"/>
    <link href="https://arabyai-webpages.s3.me-south-1.amazonaws.com/template_website/testing_template/css/bootstrap.min.css" rel="stylesheet"/>
    <link class="style" href="css/style.css" rel="stylesheet"/>
    <style>
        .contact_details {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            margin-top: 20px;
        }

        @media (min-width: 768px) {
            .contact_details {
                flex-direction: row;
            }
        }

        .section-title .sub-title::before {
            right: 2px;
        }

        .button-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .button {
            padding: 10px 20px;
            margin: 10px;
            background-color: #0074D9;
            color: #FFFFFF;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .button i {
            margin-right: 10px;
        }
    </style>
    
</head>
<body data-bs-offset="60" data-bs-spy="scroll" data-bs-target=".navbar">
    <nav class="navbar navbar-expand-lg fixed-top navbar-custom sticky-dark" id="navbar-sticky">
        <div class="container">
            <a class="logo text-uppercase" href="#home" style="display: flex; justify-content: center; gap: 10px; align-items: center">
                <img alt="" src="https://www.una.edu/brand/images/logo/round/UNA-roundLionPurpleW.png.pagespeed.ce.sooHu-qo8w.png" width="50px"/>
            </a>
            <button aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbarCollapse" data-bs-toggle="collapse" type="button">
                <i class="mdi mdi-menu"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto navbar-center" id="mySidenav">
                    <li class="nav-item">
                        <a class="nav-link" href="index.html">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#testimonial">Testimonial</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Navbar -->
    <div class="container-fluid bg-light py-5">
        <div class="row d-flex justify-content-center align-items-center flex-column">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h1 class="display-5 mb-3"><strong>Housing</strong></h1>
                        <p class="fs-5 mb-5">Two options for you to choose from:</p>
                        <div class="d-flex justify-content-center">
                            <a href="#housing-for-individuals" class="btn btn-primary me-3">Housing for Individuals</a>
                            <a href="#housing-for-family" class="btn btn-success">Housing for Family</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Navbar End -->

    <!-- Family -->
    <section id="housing-for-family" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center mb-5">Housing for Family</h2>
                    <p style="font-size: larger;">Being international students without social security numbers, I've selected several family-friendly apartments for you. These options are particularly accommodating as they do not necessitate a social security number for the rental process.</p>

                    <!-- Form for Housing for Family -->
                    <form action="/submit-family" method="POST">
                        <div class="mb-3">
                            <label for="firstNameFamily" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstNameFamily" name="firstNameFamily" required>
                        </div>
                        <div class="mb-3">
                            <label for="lastNameFamily" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastNameFamily" name="lastNameFamily" required>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumberFamily" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumberFamily" name="phoneNumberFamily" required>
                        </div>
                        <div class="mb-3">
                            <label for="noteFamily" class="form-label">Note</label>
                            <textarea class="form-control" id="noteFamily" name="noteFamily"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="apartmentTypeFamily" class="form-label">Apartment Type</label>
                            <select class="form-select" id="apartmentTypeFamily" name="apartmentTypeFamily">
                                <option value="residence">Residence Hall</option>
                                <option value="apartment">University Apartment</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <!-- End of Form for Housing for Family -->
                </div>
            </div>
        </div>
    </section>
    <!-- Family End -->

<!-- Individuals Start -->
    <!-- Individuals Start -->
    <section id="housing-for-individuals" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center mb-5">Housing for Individuals</h2>

                    <h3>There are two basic types of housing available on campus:
                    </h3><br>
                    <h4>1. Residence Halls</h4>
                    <p>UNA offers modern residence halls designed to enhance students' educational experiences. These halls foster a sense of community and provide a supportive living environment. If you're looking for a traditional on-campus housing experience, residence halls are a great choice.</p><br>
                    <h4>2. University Apartments</h4>
                    <p>In addition to residence halls, UNA also provides university apartments. These apartments offer a different living experience, combining the convenience of on-campus housing with more independent living arrangements.</p>

                    <!-- Form for Housing for Individuals -->
                    <form action="/submit-individuals" method="POST">
                        <div class="mb-3">
                            <label for="firstNameIndividuals" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="firstNameIndividuals" name="firstNameIndividuals" required>
                        </div>
                        <div class="mb-3">
                            <label for="lastNameIndividuals" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastNameIndividuals" name="lastNameIndividuals" required>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumberIndividuals" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumberIndividuals" name="phoneNumberIndividuals" required>
                        </div>
                        <div class="mb-3">
                            <label for="noteIndividuals" class="form-label">Note</label>
                            <textarea class="form-control" id="noteIndividuals" name="noteIndividuals"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="apartmentTypeIndividuals" class="form-label">Apartment Type</label>
                            <select class="form-select" id="apartmentTypeIndividuals" name="apartmentTypeIndividuals">
                                <option value="residence">Residence Hall</option>
                                <option value="apartment">University Apartment</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <!-- End of Form for Housing for Individuals -->
                    
                    <p>If you have specific questions, feel free to reach out to the Housing & Residence Life office:</p>
                    <ul>
                        <li>Phone: <%= phoneNumber %></li>
                        <li>Email: <a href="mailto:<%= email %>"><%= email %></a></li>
                    </ul>
                    <p>UNA is committed to providing a supportive and enriching environment for all students, including international students like yourself! ðŸŒŸ</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Individuals End -->
                        
    
    <!-- Small Button -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <a href="https://www.una.edu/housing/housing-options/index.html" class="btn btn-primary btn-sm">
                        For more detailed information,Press here to see UNA Housing Options
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- footer & cta start -->
    <section class="footer bg-light" style="padding: 50px 20px">
        <div class="pb-0" id="contact">
            <!-- start container -->
            <div class="container" style="padding-bottom: 40px">
                <div class="contact-item">
                    <div class="row align-items-center">
                        <div class="contact-info">
                            <div class="mb-4">
                                <h2>Let's Connect</h2>
                            </div>
                            <hr/>
                            <div class="contact_details">
                                <div class="info-content">
                                    <h5>Address :</h5>
                                    <div class="d-flex mt-2">
                                        <div class="icon">
                                            <i class="mdi mdi-home-outline fs-24 text-primary"></i>
                                        </div>
                                        <div class="icon-content ms-3">
                                            <p class="mb-0 fs-15" id="address"><%= address %></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="info-content">
                                    <h6>Support :</h6>
                                    <div class="d-flex mt-2">
                                        <div class="icon">
                                            <i class="mdi mdi-email-outline fs-24 text-primary"></i>
                                        </div>
                                        <div class="icon-content ms-3">
                                            <p class="mb-0 fs-15" id="email"><%= supportEmail %></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="info-content">
                                    <h6>Phone :</h6>
                                    <div class="d-flex mt-2">
                                        <div class="icon">
                                            <i class="mdi mdi-phone-outline fs-24 text-primary"></i>
                                        </div>
                                        <div class="icon-content ms-3">
                                            <p class="mb-0 fs-15" id="mob_no"><%= phoneNo %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer & cta end -->
</body>
</html>
